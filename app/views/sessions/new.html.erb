<h1>Inicio de sesión</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Entrar" %>
  </div>
<% end %>

<p>¿Eres nuevo usuario? <%= link_to "Regístrate!", signup_path %></p>
